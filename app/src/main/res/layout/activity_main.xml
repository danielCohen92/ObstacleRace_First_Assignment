<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D2B48C"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <LinearLayout
        android:id="@+id/main_IMG_hearts"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_iconheart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/ic_iconheart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_iconheart" />

    </LinearLayout>


    <GridLayout
        android:id="@+id/main_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_IMG_hearts"
        android:layout_marginTop="3dp"
        android:alignmentMode="alignMargins"
        android:layout_marginStart="-30dp"
        android:layout_marginEnd="0dp"

        android:columnCount="5"
        android:columnOrderPreserved="false"
        android:rowCount="5">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Thief"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/thief"
             />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob1"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob4"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob7"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:src="@drawable/obstacle" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob2"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="130dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob5"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="110dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob8"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="90dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob3"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="110dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob6"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="110dp"
            android:src="@drawable/obstacle" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Ob9"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="110dp"
            android:src="@drawable/obstacle" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/carLeft"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="25dp"
            android:src="@drawable/policecar" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/carMiddle"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="25dp"
            android:src="@drawable/policecar" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/carRight"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginTop="25dp"
            android:src="@drawable/policecar" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/main_BTN_Arrows"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/main_grid"
        >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_BTN_LEFT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight = "true"
        android:layout_alignParentBottom = "true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/rightarrow"
        android:scaleType="center"
        app:maxImageSize="40dp"
        app:backgroundTint="@color/white"

        />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_nothing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="120"
            android:visibility="invisible"
            android:text="nothing" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_BTN_Right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight = "true"
            android:layout_alignParentBottom = "true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/leftarrow"
            android:scaleType="center"
            app:maxImageSize="40dp"
            app:backgroundTint="@color/white"

            />
</LinearLayout>



</RelativeLayout>